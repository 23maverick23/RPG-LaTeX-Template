% Table Header
\newcommand{\header}[1]{{
	\par\vspace*{8pt}
	\noindent
	\rpg@TableTitleFont
	#1}}

% Centered Column
\newcolumntype{Y}{>{\centering\arraybackslash}X}

% Table Environment
\newenvironment{rpg-table}[1][lX]{
	\par\vspace*{8pt}
	\noindent
    \rpg@TableBodyFont
	\rowcolors{1}{bgtan}{commentgreen} % Alternate colors
	\tabularx{\linewidth}{#1}
}{
    \endtabularx
    \vspace{8pt plus 1pt}
    \noindent
} 

% Table Environment
\newenvironment{rpg-table2}[1][lX]{
	\par\vspace*{8pt}
	\noindent
	\fontfamily{lmss}\selectfont %Select font
	\rowcolors{1}{bgtan}{commentblue} % Alternate colors
	\tabularx{\linewidth}{#1}
}
{
    \endtabularx
    \vspace{8pt plus 1pt}
    \noindent
} 
